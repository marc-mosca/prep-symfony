<div class="flex flex-col space-y-5" {{ attributes }}>
    <div class="flex justify-between gap-4">
        {% include "partials/user-table/_search-input.html.twig" %}
        {% include "partials/user-table/_role-filter.html.twig" %}
    </div>

    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
        <table class="table table-zebra">
            <thead>
            <tr>
                <th>
                    <button
                        class="btn btn-ghost btn-xs"
                        data-action="live#action"
                        data-live-action-param="toggleSort"
                        data-live-sort-by-param="id"
                    >
                        ID
                        {% if sortBy == 'id' %}
                            {{ sortDir == 'ASC' ? '↑' : '↓' }}
                        {% endif %}
                    </button>
                </th>
                <th>Nom</th>
                <th>Email</th>
                <th>Age</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if users is empty %}
                <tr>
                    <td colspan="5" class="text-center text-base-content/50 py-8">
                        {% if query %}
                            Aucun utilisateur trouvé pour "{{ query }}"
                        {% else %}
                            Aucun utilisateur
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                {% for user in users %}
                    {% include "partials/user-table/_user-row.html.twig" with {user: user} %}
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

    {% include "partials/user-table/_edit-modal.html.twig" %}
    {% include "partials/user-table/_delete-modal.html.twig" %}

    {% if users | length < usersCount %}
        <button class="btn" data-action="live#action" data-live-action-param="loadUsers">
            Voir plus
        </button>
    {% endif %}
</div>
