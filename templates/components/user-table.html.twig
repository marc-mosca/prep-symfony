<div class="flex flex-col space-y-8" {{ attributes }}>
    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
        <table class="table table-zebra">
            <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Email</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th>{{ user.id }}</th>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.age }}</td>
                    <td class="flex flex-row border-none">
                        <button
                            class="btn btn-sm btn-ghost tooltip"
                            data-action="live#action"
                            data-live-action-param="edit"
                            data-live-id-param="{{ user.id }}"
                        >
                            <twig:icon name="edit" class="w-4 h-4" />
                        </button>

                        <button
                            class="btn btn-sm btn-ghost btn-error tooltip"
                            data-action="live#action"
                            data-live-action-param="delete"
                            data-live-id-param="{{ user.id }}"
                        >
                            <twig:icon name="trash" class="w-4 h-4" />
                        </button>
                    </td>
                </tr>
            {% endfor %}

            {% if editingUser %}
                <dialog id="user_edit_modal" class="modal modal-bottom sm:modal-middle" open>
                    <div class="modal-box">
                        <button
                            class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2"
                            data-action="live#action"
                            data-live-action-param="close"
                        >
                            âœ•
                        </button>

                        {{ form_start(form) }}
                            {{ form_row(form.username) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.age) }}

                            <button
                                class="btn btn-neutral mt-4"
                                data-action="live#action"
                                data-live-action-param="save"
                            >
                                Sauvegarder
                            </button>
                        {{ form_end(form) }}
                    </div>
                </dialog>
            {% endif %}

            </tbody>
        </table>
    </div>

    {% if this.hasMore %}
        <button
            class="btn"
            data-action="live#action"
            data-live-action-param="more"
        >
            Voir plus
        </button>
    {% endif %}
</div>
